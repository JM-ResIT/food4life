<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mfwis415a.food4life.AddFood">


    <EditText
        android:id="@+id/foodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Name"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/foodDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/foodName"
        android:ems="10"
        android:hint="Beschreibung"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/foodAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/foodDescription"
        android:layout_alignStart="@+id/foodDescription"
        android:layout_below="@+id/foodDescription"
        android:ems="10"
        android:hint="Anzahl"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/foodUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_below="@+id/foodAmount" />

    <EditText
        android:id="@+id/equivalent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodUnit"
        android:ems="10"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="kcal"
        android:inputType="number" />



    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:layout_below="@+id/equivalent"
        android:gravity="bottom"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/deleteFood"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="LÃ¶schen" />

        <Button
            android:id="@+id/editFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Speichern" />


    </LinearLayout>
</RelativeLayout>
