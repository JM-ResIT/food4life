<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mfwis415a.food4life.Profile">

    <EditText
        android:id="@+id/ProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="37dp" />

    <EditText
        android:id="@+id/ProfileHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Größe in cm"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="106dp" />

    <EditText
        android:id="@+id/ProfileWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Gewicht in kg"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="178dp" />

    <EditText
        android:id="@+id/ProfileBday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:hint="Geburtsdatum (TT/MM/JJ)"
        android:inputType="date"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="252dp" />

    <EditText
        android:id="@+id/ProfileCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Kalorienbedarf"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="321dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="19dp"
        android:text="Aktualisieren"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="446dp" />
</RelativeLayout>
